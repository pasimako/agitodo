<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:padding="20dp"
	android:background="#FFFFFF">

	<TextView android:layout_width="match_parent"
		android:layout_height="wrap_content" android:textSize="18dp"
		android:text="@string/dialog_copyright" android:textColor="#000000" />

	<TextView android:id="@+id/about_extra" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:paddingTop="20dp"
		android:textSize="16dp" android:text="@string/dialog_thirdparty"
		android:autoLink="web" android:textColor="#000000" />
</LinearLayout>
